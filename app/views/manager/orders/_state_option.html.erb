<div>
	<% case order.aasm_state %>
	<% when "order_placed" %>
		<%= link_to("取消訂單",
								cancel_manager_order_path(order),
								class: "btn btn-default btn-sm", method: :post) %>
	<% when "paid" %>
		<%= link_to("取消訂單",
								cancel_manager_order_path(order),
								class: "btn btn-default btn-sm", method: :post) %>
		<%= link_to("出貨",
								shipped_manager_order_path(order),
								class: "btn btn-default btn-sm", method: :post) %>
	<% when "shipped" %>
		<%= link_to("退貨",
				return_manager_order_path(order),
				class: "btn btn-default btn-sm", method: :post) %>
	<% when "order_cancelled" %>
		<span class="label label-default">訂單已取消</span>
	<% when "good_returned" %>
		<span class="label label-default">已退貨</span>
	<% end %>	
</div>